<!-- 
Deploy this file to:
- xconnect\App_Data\Config\Sitecore\MarketingAutomation\
- xconnect\App_Data\jobs\continuous\AutomationEngine\App_Data\Config\Sitecore\MarketingAutomation\
-->  
<Settings>
    <Sitecore>
        <XConnect>
            <MarketingAutomation>
                <Engine>
                    <Services>
                        <MarketingAutomation.Activity.SendSMS>
                            <Type>Sitecore.Xdb.MarketingAutomation.Locator.ActivityTypeRegistration, Sitecore.Xdb.MarketingAutomation</Type>
                            <LifeTime>Singleton</LifeTime>
                            <Options>
                                <Id>{3B8931DA-151A-414F-B42E-98C8745E40B9}</Id> <!-- The Id node is the ID of the activity descriptor item in Sitecore -->
                                <ImplementationType>FlaminGalahs.Foundation.MA.Extensions.SendSMS, FlaminGalahs.Foundation.MA</ImplementationType>
                            </Options>
                        </MarketingAutomation.Activity.SendSMS>
                    </Services>
                </Engine>
            </MarketingAutomation>
        </XConnect>
    </Sitecore>
</Settings>